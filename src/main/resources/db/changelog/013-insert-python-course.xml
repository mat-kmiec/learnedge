    color: #fff;
    z-index: 999999;
}

.type-modal-backdrop {
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: rgba(0,0,0,0.55);
    backdrop-filter: blur(3px);
    z-index: 999998;
}

.close-type-modal {
    float: right;
    font-size: 26px;
    cursor: pointer;
}

#typesModalText {
