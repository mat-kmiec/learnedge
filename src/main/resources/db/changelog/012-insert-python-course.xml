<!-- MODAL ‚Äì wyskakujƒÖce okno -->
<!-- T≈ÅO -->
<div id="typesBackdrop" class="type-modal-backdrop" style="display:none;"></div>

<!-- OKNO -->
<div id="typesModal" class="type-modal" style="display:none;">
