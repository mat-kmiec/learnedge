<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd">

    <changeSet id="002-create-course" author="learnedge">
        <createTable tableName="courses">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="CLOB">
                <constraints nullable="false"/>
            </column>
            <column name="difficulty" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="slug" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="002-seed-user" author="learnedge" context="dev">
        <insert tableName="courses">
            <column name="name" value="Podstawy Javy"/>
            <column name="description" value="Wprowadzenie do języka Java, składni, zmiennych, pętli i klas."/>
            <column name="difficulty" value="początkujący"/>
            <column name="slug" value="podstawy-java" />
        </insert>
        <insert tableName="courses">
            <column name="name" value="Podstawy programowania w python"/>
            <column name="description" value="Wprowadzenie do języka Python"/>
            <column name="difficulty" value="początkujący"/>
            <column name="slug" value="podstawy-python" />
        </insert>
    </changeSet>
</databaseChangeLog>